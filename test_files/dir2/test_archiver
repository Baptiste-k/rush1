#include <stdlib.h>
#include <stdio.h>
#include <sys/types.h>
#include <sys/stat.h>
#include <sys/sendfile.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>
#include <dirent.h>

int		fill_archive_src(FILE *file_archive, char *cfile, int fd_archive)
{
  struct stat	buf;
  int		fd;
  DIR		*dir;

  stat(cfile, &buf);
  if (S_ISDIR(buf.st_mode))
    {
      dir = opendir(cfile);
      if ((fill_archive_dir(dir, file_archive, cfile, fd_archive)) == 84)
	return (84);
    }
  else
    {
      if ((fd = open(cfile, O_RDONLY)) == -1)
	return (84);
      fprintf(file_archive, "%s\n", cfile);
      fprintf(file_archive, "%i\n", buf.st_size);
      sendfile(fd_archive, fd, NULL, buf.st_size);
    }
}

int		fill_archive_dir(DIR *dir, FILE *file_archive, char *cfile, int fd_archive)
{
  struct dirent	*dirent;
  struct stat	buf;
  int		fd;

  printf("%s\n", cfile);
  while ((dirent = readdir(dir)) != NULL)
    {
      printf("%s\n", dirent->d_name);
      stat(dirent->d_name, &buf);
      if (S_ISDIR(buf.st_mode))
	{
	  fill_archive_dir(opendir(dirent->d_name), file_archive,
		       strcat(cfile, dirent->d_name), fd_archive);
	}
      else
	{
	  if ((fd = open(dirent->d_name, O_RDONLY)) == -1)
	    return (84);
	  fprintf(file_archive, "%s\n", dirent->d_name);
	  fprintf(file_archive, "%i\n", buf.st_size);
	  sendfile(fd_archive, fd, NULL, buf.st_size);
	}
    }
  return (0);
}

int		main(int ac, char **av)
{
  FILE		*file;
  int		i;

  i = 2;
  if (ac == 1)
    {
      printf("Usage: ./my_archive [archive_name] [files ...]");
      return (0);
    }
  if ((file = fopen(av[1], "w+")) == NULL)
    return (84);
  while (i != ac)
    {
      fill_archive_src(file, av[i], open(av[1], O_RDWR));
      i++;
    }
  return (0);
}
